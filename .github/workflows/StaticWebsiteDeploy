name: Upload To Azure
on: push

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@master
      - uses: feeloor/azure-static-website-deploy@master
        env:
          SOURCE_DIR: "./html"
          AZURE_CLIENT_ID: ${{ secrets.AZURE_CREDENTIALS }}
          AZURE_TENANT_ID: ${{ secrets.AZURE_CREDENTIALS }}
          AZURE_SECRET: ${{ secrets.AZURE_CREDENTIALS }}
          AZURE_SUBSCRIPTION_ID: ${{ secrets.AZURE_SUBSCRIPTION }}
          AZURE_STORAGE_ACCOUNT_NAME: "jdstorageyghpg6zzaj4uy"
          AZURE_INDEX_DOCUMENT_NAME: "index.html"
          AZURE_ERROR_DOCUMENT_NAME: "error.html"
          FORCE_OVERWRITE: "true"
